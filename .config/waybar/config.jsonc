    "custom/memory": {
        "exec": "~/.config/waybar/scripts/memory.sh",
        "return-type": "json",
        "interval": 3,
        "signal": 10,
        "on-click": "kitty -e htop"
    },

    "custom/brightness": {
        "exec": "~/.config/waybar/scripts/brightness.sh",
        "return-type": "json",
        "interval": 1,
        "signal": 11,
        "tooltip": true,
        "on-scroll-up": "~/.config/waybar/scripts/brightness.sh --inc",
        "on-scroll-down": "~/.config/waybar/scripts/brightness.sh --dec"
    },

    "custom/weather": {
        "exec": "~/.config/waybar/scripts/weather.sh Rome",
        "return-type": "json",
        "interval": 1800,
        "tooltip": true,
        "on-click": "xdg-open https://weather.com"
    },

    "custom/power-profile": {
        "exec": "~/.config/waybar/scripts/power-profile.sh",
        "return-type": "json",
        "interval": 10,
        "signal": 9,
        "on-click": "~/.config/waybar/scripts/power-profile.sh --toggle",
        "on-click-right": "kitty -e sh -lc 'powerprofilesctl list'"
